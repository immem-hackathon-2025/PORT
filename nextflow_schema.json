{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com///nextflow_schema.json",
  "title": " pipeline parameters",
  "description": "",
  "type": "object",
  "$defs": {
    "input_output_options": {
      "title": "Input/output options",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Define where the pipeline should find input data and save output data.",
      "properties": {
        "input_dir": {
          "type": "string",
          "format": "file-path",
          "description": "Input sfolder containing FASTQ files. You have to use absolute paths to storage on Cloud infrastructure.",
          "default": "null"
        },
        "output_dir": {
          "type": "string",
          "format": "directory-path",
          "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
          "fa_icon": "fas fa-folder-open",
          "default": "${launchDir}/output"
        },
        "assemblies": {
          "type": "string",
          "format": "directory-path",
          "description": "The directory where the assemblies will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
          "fa_icon": "fas fa-folder-open",
          "default": "null"
        }
      }
    },
    "param_options": {
      "title": "Special parameters",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Additional parameters for the pipeline",
      "properties": {
        "medaka_model": {
          "type": "string",
          "description": "Medaka model to use",
          "default": "r1041_e82_400bps_sup"
        },
        "assembler": {
          "type": "string",
          "description": "Long read assembler to use",
          "default": "autocycler"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/$defs/input_output_options"
    },
    {
      "$ref": "#/$defs/param_options"
    }
  ],
  "properties": {
    "max_memory": {
      "type": "string",
      "hidden": true,
      "description": "Maximum memory to use for each process",      
      "default": "16.GB"
    },
    "max_cpus": {
      "type": "integer",
      "hidden": true,
      "description": "Maximum number of CPUs to use for each process",
      "default": 10
    },
    "max_time": {
      "type": "string",
      "hidden": true,
      "description": "Maximum time to use for each process",
      "default": "10.h"
    }
  }
}